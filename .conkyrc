conky.config = {

	--Various Settings
	background = true,
	update_interval = 1.0,
	update_interval_on_battery = 2.0,
	double_buffer = true,
	no_buffers = true,
    cpu_avg_samples = 2,
	net_avg_samples = 2,
	diskio_avg_samples = 10,
	temperature_unit = 'celsius',    

	--Placement
	alignment = 'top_right',
    gap_x = 20,
    gap_y = 50,
    minimum_height = 5,
	minimum_width = 300,
	maximum_width = 300,

	--Graphical
	border_width = 0,
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
	stippled_borders = 0,

	--Textual
	extra_newline = false,
	font = 'DejaVu Sans Mono:size=9',
	uppercase = false,
	format_human_readable = true,
	short_units = true,
	use_spacer = 'none',
	use_xft = true,
	xftalpha = 1,
    
	--Windows
	own_window = true,
	own_window_argb_value = 25,
	own_window_argb_visual = true,
	own_window_colour = '#000000',
    own_window_class = 'Conky',
    own_window_type = 'desktop',

	--Colours
	default_color = 'white',
	color1 = '#9CC6D2', -- light blue
	color2 = '#43A4B7', -- pacific blue
	color3 = '#C1DBE1', -- light blue (lighter)
	color5 = '#02293C', -- prussian blue
	color6 = '#C06E52', -- copper red
}

conky.text = [[
${color2}Hostname: ${color1}${alignr}${nodename}
${color2}OS: ${color1}${alignr}${exec lsb_release -d| awk '{$1=""; print $0}'}
${color2}Uptime: ${color1}${alignr}${uptime}

${color3}${font :bold:size=10}CPU${font :normal:size=9} ${hr 2}

${color2}Core${goto 70}Freq (MHz)${goto 150}Temp (°C)${goto 230}Usage (%)
${color2}${goto 20}1${color1}${goto 80}${freq 1}${goto 160}${hwmon 3 temp 2}${goto 240}${cpu cpu1} 
${color2}${goto 20}2:${color1}${goto 80}${freq 2}${goto 160}${hwmon 3 temp 3}${goto 240}${cpu cpu2}
${color2}${goto 20}3:${color1}${goto 80}${freq 3}${goto 160}${hwmon 3 temp 4}${goto 240}${cpu cpu3}
${color2}${goto 20}4:${color1}${goto 80}${freq 4}${goto 160}${hwmon 3 temp 5}${goto 240}${cpu cpu4}
${color2}${goto 20}5:${color1}${goto 80}${freq 5}${goto 160}${hwmon 3 temp 6}${goto 240}${cpu cpu5}
${color2}${goto 20}6:${color1}${goto 80}${freq 6}${goto 160}${hwmon 3 temp 7}${goto 240}${cpu cpu6}
#${color2}Usage:${color1}${goto 70}${cpu cpu0}%${goto 155}${color2}Fan:${color1}${goto 220}${hwmon 5 fan 1} RPM
${color5}${cpugraph cpu0 40,300 C06E52 C06E52 -l}
${color2}Fan:${color1}${goto 70}${hwmon 5 fan 1} rpm
${color2}GPU Temp: ${color1}${nvidia temp}°C${goto 155}${color2}GPU Freq: ${color1}${nvidia gpufreq} Mhz

${color3}${font :bold:size=10}MEMORY${font :normal:size=9} ${hr 2}

${color2}RAM Usage:${color1} ${alignr}$mem/$memmax - $memperc%
${color2}Swap Usage:${color1} ${alignr}$swap/$swapmax - $swapperc%
${color5}${memgraph 40,300 C06E52 C06E52 -l}

${color3}${font :bold:size=10}STORAGE${font :normal:size=9} ${hr 2}

${color2}NVMe / :${color1}${alignr}${fs_used /}/${fs_size /} - ${fs_used_perc /}%
${color2}Read:${color1}${goto 70}${diskio_read nvme0n1}${goto 155}${color2}Write:${color1}${goto 220}${diskio_write nvme0n1}
${color5}${diskiograph_read nvme0n1 40,145 C06E52 C06E52 -l}${goto 155}${diskiograph_write nvme0n1 40,145 C06E52 C06E52 -l}

${color3}${font :bold:size=10}NETWORK${font :normal:size=9} ${hr 2}

${color2}WLAN:${color1}${alignr}${wireless_essid wlo1}
${color2}IP:${color1}${alignr}${addr wlo1}
${color2}Link quality:${color1}${alignr}${wireless_link_qual_perc wlo1}%

${color2}${goto 70}Up${goto 220}Down
${color2}Speed: ${goto 70}${color1}${upspeed wlo1}${goto 220}${downspeed wlo1}
${color2}Total: ${goto 70}${color1}${totalup wlo1}${goto 220}${totaldown wlo1}
${color5}${upspeedgraph wlo1 40,145 C06E52 C06E52 -l}${goto 155}${downspeedgraph wlo1 40,145 C06E52 C06E52 -l}

${color3}${font :bold:size=10}PROCESSES${font :normal:size=9} ${hr 2}

${color2}Threads: ${color1}${goto 70}${threads}${goto 155}${color2}Running: ${color1}${goto 220}${running_threads}
${color2}Total: ${color1}${goto 70}${processes}${goto 155}${color2}Running: ${color1}${goto 220}${running_processes}
${color2}Name${goto 150}PID${goto 200}CPU%${goto 250}MEM%
${color1} ${top name 1}${goto 150}${top pid 1}${goto 200}${top cpu 1}${goto 250}${top mem 1}
${color1} ${top name 2}${goto 150}${top pid 2}${goto 200}${top cpu 2}${goto 250}${top mem 2}
${color1} ${top name 3}${goto 150}${top pid 3}${goto 200}${top cpu 3}${goto 250}${top mem 3}
${color1} ${top name 4}${goto 150}${top pid 4}${goto 200}${top cpu 4}${goto 250}${top mem 4}
${color1} ${top name 5}${goto 150}${top pid 5}${goto 200}${top cpu 5}${goto 250}${top mem 5}

${color3}${font :bold:size=10}POWER${font :normal:size=9} ${hr 2}

${color2}AC Adapter: ${color1}${alignr}${acpiacadapter AC0}
${if_empty ${battery_time BAT0}}${color2}Battery: ${color1}${alignr}${battery_percent BAT0}%${else}${color2}Battery: ${alignr}${color1}${battery BAT0}
${color2}Time Left: ${color1}${alignr}${battery_time BAT0}
${endif}
]]
